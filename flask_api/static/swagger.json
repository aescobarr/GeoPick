{
    "swagger": "2.0",
    "info": {
      "title": "GeoPick API",
      "version": "1"
    },
    "paths": {
      "/v1/auth": {
        "post": {
          "description": "User authentication",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "access data",
              "in": "body",
              "description": "JSON data for the api",
              "required": true,
              "schema": {
                "$ref": "#/definitions/AuthData"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Successfully generated auth jwt token"
            },
            "404": {
              "description": "Incorrect username or password"
            }
          }
        }      
      }
    },    
    "definitions": {
      "AuthData": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }